<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.personalexpensetracker.controller.CategoryController" prefWidth="800" prefHeight="600">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Category Management" styleClass="heading"/>
        <HBox spacing="10">
            <TextField fx:id="nameField" promptText="Category name" />
            <Button text="Add" fx:id="addBtn" onAction="#addCategory"/>
            <Button text="Update" fx:id="updateBtn" onAction="#updateCategory"/>
            <Button text="Delete" fx:id="deleteBtn" onAction="#deleteCategory"/>
        </HBox>
        <ListView fx:id="listView" prefHeight="400"/>
    </VBox>
</AnchorPane>
