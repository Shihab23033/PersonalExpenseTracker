<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalexpensetracker.controller.SignupController" spacing="8" alignment="CENTER" styleClass="card spaced">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Create account" styleClass="app-header" />
    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
    <TextField fx:id="fullnameField" promptText="Full name" styleClass="text-field" />
    <TextField fx:id="budgetField" promptText="Monthly budget (number)" styleClass="text-field" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />
    <Button text="Create" onAction="#onCreate" styleClass="button" />
    <Label fx:id="messageLabel" />
</VBox>
