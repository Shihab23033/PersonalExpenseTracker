<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalexpensetracker.controller.DashboardController">
	<padding>
		<Insets bottom="30" left="30" right="30" top="30" />
	</padding>

	<VBox styleClass="profile-card card" alignment="CENTER" spacing="16">
		<Label fx:id="welcomeLabel" styleClass="profile-name" />

		<HBox spacing="16" alignment="CENTER">
			<VBox styleClass="metric-tile" alignment="CENTER">
				<Label text="Budget" styleClass="metric-title" />
				<Label fx:id="budgetLabel" styleClass="metric-value" />
			</VBox>
			<VBox styleClass="metric-tile" alignment="CENTER">
				<Label text="Spent" styleClass="metric-title" />
				<Label fx:id="spentLabel" styleClass="metric-value" />
			</VBox>
			<VBox styleClass="metric-tile" alignment="CENTER">
				<Label text="Remaining" styleClass="metric-title" />
				<Label fx:id="balanceLabel" styleClass="metric-value" />
			</VBox>
		</HBox>

		<Label fx:id="warningLabel" styleClass="warning-label" />

		<HBox spacing="12" alignment="CENTER">
			<Button text="Edit Budget" onAction="#onEditBudget" styleClass="button" />
			<Button text="Go to Expenses" onAction="#onGoExpenses" styleClass="button secondary" />
			<Button text="Logout" onAction="#onLogout" styleClass="button danger flat" />
		</HBox>
	</VBox>
</VBox>

