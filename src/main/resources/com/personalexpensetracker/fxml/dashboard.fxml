<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.personalexpensetracker.controller.DashboardController">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <VBox alignment="CENTER" spacing="16" styleClass="profile-card card">
        <Label fx:id="welcomeLabel" styleClass="profile-name" />

        <HBox alignment="CENTER" spacing="16">
            <VBox alignment="CENTER" styleClass="metric-tile">
                <Label styleClass="metric-title" text="Budget" />
            </VBox>
            <Label fx:id="budgetLabel" styleClass="metric-value" />
            <VBox alignment="CENTER" styleClass="metric-tile">
                <Label styleClass="metric-title" text="Spent" />
            </VBox>
            <Label fx:id="spentLabel" styleClass="metric-value" />
            <VBox alignment="CENTER" styleClass="metric-tile">
                <Label styleClass="metric-title" text="Remaining" />
            </VBox>
            <Label fx:id="balanceLabel" styleClass="metric-value" />
        </HBox>

                    <Label fx:id="warningLabel" styleClass="warning-label" />

        <HBox alignment="CENTER" spacing="12">
            <Button onAction="#onEditBudget" styleClass="button" text="Edit Budget" />
            <Button onAction="#onGoExpenses" styleClass="button secondary" text="Go to Expenses" />
            <Button onAction="#onLogout" styleClass="button danger flat" text="Logout" />
        </HBox>
    </VBox>
</VBox>
